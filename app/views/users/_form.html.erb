            <%= form_for(@user) do |f| %>
                <div class="form-group">
                    <%= f.text_field :lname, placeholder: "Last name", class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.text_field :fname, placeholder: "First name", class: "form-control"%>
                </div>
                <div class="form-group">
                    <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password, placeholder: "password", class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, placeholder:"Password confirmation", class: "form-control" %>
                </div>
                <% if request.path == "/signup"%>
                    <div class="form form-group">
                    <%= f.submit "Sign Up", class:"btn btn-primary btn-block"%>
                    </div>
                    <%= link_to 'You already have an account? Login here.', signin_path, class:"btn btn-primary", type:"button", id:"button-signup" %>
                <%elsif request.path == "/users/new"%>
                    <div class="form form-group">
                    <button class="btn btn-primary btn-block" type="submit">Create</button>
                    </div>
                <%else%>
                    <div class="form form-group">
                    <button class="btn btn-primary btn-block" type="submit">Update</button>
                    </div>
                <%end%>
            <%end%>

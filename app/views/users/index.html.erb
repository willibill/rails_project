<div class="register-photo">
        <div id="book-frame" class="form-container">
            <div class="btn-toolbar">
                <div class="btn-group" role="group">
                    <% if current_user.is_admin? %>
                      <%= link_to 'New User', new_user_path, class:"btn btn-default" %>
                      <%= link_to 'Roles', roles_path, class:"btn btn-default" %>
                    <% end%>
                </div>
                <div class="btn-group" role="group"></div>
            </div>
            <form>
                <% if current_user.is_admin? %>
                <h3 class="text-center">Listing users</h3>
                <div class="table-responsive" style="padding:36px;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Email </th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody id="table-library">
                            <% @users.each do |user| %>
                              <tr>
                                <td><%= user.fname %></td>
                                <td><%= user.lname %></td>
                                <td><%= user.email %></td>



                                <td><%= link_to 'Show', user %></td>
                                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>


                              </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <%else%>
                <h3 class="text-center">Connected users</h3>
                <div class="table-responsive" style="padding:36px;">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First name</th>
                                <th>Last name</th>
                                <th>Email </th>
                                <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody id="table-library">
                              <tr>
                                <td><%= current_user.fname %></td>
                                <td><%= current_user.lname %></td>
                                <td><%= current_user.email %></td>
                                <td><%= link_to 'Edit', edit_user_path(current_user) %></td>
                              </tr>
                        </tbody>
                    </table>
                </div>
                <%end%>
            </form>
        </div>
    </div>
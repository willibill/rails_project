<div class="register-photo">
    <div class="form-container">
        <div class="btn-toolbar">
            <div class="btn-group" role="group">
                <% if current_user.is_admin? %>
                <%= link_to 'Edit', edit_book_path(@book), class:"btn btn-default" %>
                <% end %>
                <%= link_to 'Back', books_path, class:"btn btn-default" %>
            </div>
        </div>
        <h2 class="text-center NewBook"><strong>Book</strong></h2>
        <form method="post">
            <div class="form-group">
                <h4>Title: </h4>
                <p class="showP"><%= @book.title %></p>
                <br>
            </div>
            <div class="form-group">
                <h4>Author: </h4>
                <p class="showP"><%= @book.Author %></p>
                <br>
            </div>
            <div class="form-group">
                <h4>Isbn: </h4>
                <p class="showP"><%= @book.ISBN %></p>
                <br>
            </div>
            <div class="form-group">
                <h4>Publisher: </h4>
                <p class="showP"><%= @book.Publisher %></p>
                <br>
            </div>
            <div class="form-group">
                <h4>Language: </h4>
                <p class="showP"><%= @book.Language %></p>
                <br>
            </div>
            <div class="form-group">
                <h4>Onloan: </h4>
                <p class="showP"><%= @book.onloan %></p>
                <br>
            </div>
            <div class="form-group">
                <h4>Description: </h4>
                <p class="showP"><%= @book.description %></p>
                <br>
            </div>
            <div class="form-group">
                <h4>Image: </h4>
                <%= image_tag @book.image.url(:med) %>
            </div>
        </form>
    </div>
</div>
<div class="register-photo">
	<div class="form-container">
		<div class="btn-toolbar">
			<div class="btn-group" role="group">
				<%= link_to 'Edit', edit_role_path(@role), class:"btn btn-default" %> 
				<%= link_to 'Back', roles_path, class:"btn btn-default" %>
			</div>
		</div>
		<h2 class="text-center NewBook"><strong>Roles</strong>.</h2>
		<form method="post">
			<div class="form-group">
				<h4 class="text-center">Name: </h4>
				<p class="showP showPUser"><%= @role.name %></p>
			</div>
			<div class="form-group">
				<h4 class="text-center">Description:</h4>
				<p class="showP showPUser"><%= @role.description %></p>
			</div>
			<div class="form-group">
				<h4 class="text-center">Level: </h4>
				<p class="showP showPUser"><%= @role.level %></p>
			</div>
		</form>
	</div>
</div>